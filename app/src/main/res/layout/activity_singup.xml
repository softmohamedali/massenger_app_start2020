<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.singup">


    <ImageView
        android:id="@+id/bu_selectimg_singup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_24" />

    <EditText
        android:id="@+id/edtx_username_singup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="User Name"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bu_selectimg_singup" />

    <EditText
        android:id="@+id/edtx_email_singup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_back"
        app:layout_constraintStart_toStartOf="@+id/edtx_username_singup"
        app:layout_constraintTop_toBottomOf="@+id/edtx_username_singup" />

    <EditText
        android:id="@+id/edtx_password_singup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="#000000"
        android:background="@drawable/edittext_back"
        app:layout_constraintStart_toStartOf="@+id/edtx_email_singup"
        app:layout_constraintTop_toBottomOf="@+id/edtx_email_singup" />

    <Button
        android:id="@+id/bu_register_singup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:text="Register"
        android:enabled="false"
        android:background="@drawable/bu_back"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtx_password_singup" />

    <ProgressBar
        android:id="@+id/pb_register_singup"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bu_register_singup" />
</androidx.constraintlayout.widget.ConstraintLayout>